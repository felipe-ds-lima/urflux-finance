// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique
  password     String
  invoices     Invoice[]
  categories   Category[]
  transactions Transaction[]

  appRole   AppRole  @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("users")
}

model Invoice {
  id           String        @id @default(uuid())
  type         InvoiceType   @default(ACCOUNT)
  name         String        @default("Conta padr√£o")
  icon         String        @default("dollar.png")
  userId       String
  user         User          @relation(fields: [userId], references: [id])
  creditDueDay Int?
  transactions Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("invoices")
}

model Category {
  id           String        @id @default(uuid())
  name         String        @default("Nova categoria")
  icon         String        @default("dollar.png")
  userId       String
  user         User          @relation(fields: [userId], references: [id])
  transactions Transaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("categories")
}

model Transaction {
  id          String          @id @default(uuid())
  type        TransactionType
  description String          @default("Novo pagamento")
  note        String?
  fixed       Boolean         @default(false)
  repeatTimes Int             @default(0)
  paymentDate DateTime
  payed       Boolean         @default(true)
  amount      Float           @default(0)
  categoryId  String?
  category    Category?       @relation(fields: [categoryId], references: [id])
  userId      String
  user        User            @relation(fields: [userId], references: [id])
  invoiceId   String
  invoice     Invoice         @relation(fields: [invoiceId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("transactions")
}

enum TransactionType {
  INCOME
  OUTCOME
}

enum InvoiceType {
  ACCOUNT
  CREDIT
}

enum AppRole {
  ADMIN
  USER
}
